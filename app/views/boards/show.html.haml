.container
  %h2.title All Boards
  .card
    %h3= @board.title
    %p= @board.content
    .dropdown-boards
      = image_tag 'menu.png', class: 'menubtn'
      .dropdown-content-boards
        = link_to 'Edit', edit_board_path(@board)
        = link_to 'Delete', board_path(@board), data: { method: 'delete', confirm: 'Are you sure you want me to delete it?' }

