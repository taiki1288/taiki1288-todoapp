.container 
  %h2.title New Card
  = form_with(model: @task, url: board_tasks_path(@task.board), local: true) do |f|
    %div 
      = f.label :title, 'Name'
    %div 
      = f.text_field :title, class: 'text'
    %div 
      = f.label :content, 'Description'
    %div 
      = f.text_area :content, class: 'description'
    = f.submit 'Submit', class: 'btn-primary'